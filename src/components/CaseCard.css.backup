.case-card-link {
  text-decoration: none;
  color: inherit;
  display: block;
}

.case-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
  cursor: pointer;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.case-card:hover {
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  transform: translateY(-4px);
}

.case-card-image {
  position: relative;
  width: 100%;
  height: 200px;
  overflow: hidden;
  background: #f0f0f0;
}

.case-card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.case-card-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.case-card-placeholder span {
  font-size: 48px;
  margin-bottom: 8px;
}

.case-card-placeholder p {
  margin: 0;
  font-size: 14px;
  opacity: 0.9;
}

.case-card-status {
  position: absolute;
  top: 12px;
  right: 12px;
}

.status-badge {
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.status-active {
  background: #4CAF50;
  color: white;
}

.status-pending {
  background: #FF9800;
  color: white;
}

.status-resolved {
  background: #2196F3;
  color: white;
}

.status-rejected {
  background: #f44336;
  color: white;
}

.status-default {
  background: #9E9E9E;
  color: white;
}

.case-card-content {
  padding: 16px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.case-card-title {
  margin: 0 0 12px 0;
  font-size: 20px;
  font-weight: 700;
  color: #333;
}

.case-card-info {
  margin-bottom: 12px;
}

.case-card-detail {
  margin: 8px 0;
  font-size: 14px;
  color: #666;
  display: flex;
  align-items: flex-start;
  line-height: 1.5;
}

.detail-icon {
  margin-right: 8px;
  font-size: 16px;
  flex-shrink: 0;
}

.case-card-description {
  margin-top: auto;
  padding-top: 12px;
  border-top: 1px solid #eee;
}

.case-card-description p {
  margin: 0;
  font-size: 14px;
  color: #888;
  line-height: 1.6;
}

/* Responsive */
@media (max-width: 768px) {
  .case-card-image {
    height: 180px;
  }

  .case-card-title {
    font-size: 18px;
  }

  .case-card-detail {
    font-size: 13px;
  }
}
